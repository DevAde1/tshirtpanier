{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
    {% for flashMessage in app.flashes('success') %}
        <div class="alert alert-success">
            {{ flashMessage }}
        </div>
    {% endfor %}

<div class="container my-4">
<h1 class="text-center mb-4">Liste de mes commandes</h1>

<table class="table table-dark table-striped text-center">
<thead>
    <tr>
        <th>Commande</th>
        <th>Produit</th>
        <th>Membre</th>
        <th>Quantite</th>
        <th>Montant</th>
        <th>État</th>
        <th>Date d'enregistrement</th>
    </tr>
</thead>
<tbody>
{% for item in commandes %}
    <tr>
        <td>{{ item.id}}</td>
        <td>{{ item.produit.id }}</td>
        <td>{{ item.membre.pseudo }}</td>
        <td>{{ item.quantite }}</td>
        <td>{{ item.montant/100 }}€</td>
        <td>{{ item.etat }}</td>
        <td>{{ item.dateEnregistrement|date('d/m/Y à H:i:s') }}</td>

    </tr>
{% endfor %}
</tbody>
</table>
</div>
{% endblock %}
